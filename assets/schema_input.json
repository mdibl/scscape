{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/scscape/master/assets/schema_input.json",
    "title": "nf-core/scscape pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "meta": ["id"]
            },
            "data_directory": {
                "type": "string",
                "format": "directory-path"
            },
            "mt_cc_rm_genes": {
                "type": "string",
                "format": "file-path"
            }
        },
        "required": ["id", "data_directory"]
    }
}
